                    <div class="card-body">
                        <h5 class="card-title">{{ game.data.name }}</h5>
                        <p class="card-subtitle text-muted mb-2">
                            <i class="fa fa-calendar"></i> {{ game.date }}
                        </p>
                        <p class="card-text">
                            Bij {{ game.host }}.
                        </p>
                    </div>
                    <div class="card-footer text-muted">
                        {% if global.coordinates.actual %}
                            <span class="float-right">
                                {{ game.distance }}km
                            </span>
                        {% endif %}
                        <i class="fa fa-map-marker"></i> {{ game.city }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="btn btn-outline-secondary mb-3" href="/web/upcoming-games?page=0">
        Meer <i class="fa fa-angle-right"></i>
    </a>
{% else %}
    <p>Geen spellen gepland.</p>
{% endif %}
<h2>In mijn buurt</h2>
{% if not global.coordinates.actual %}
    <div class="alert alert-warning">
        {% if global.user %}
            Om deze functie te activeren moet je een adres ingeven bij <a class="alert-link" href="/web/settings">Instellingen</a>.
        {% else %}
            Om deze functie te activeren moet je eerst aanmelden.
            Daarna kan je een adres ingeven bij <a class="alert-link" href="/web/settings">Instellingen</a>.
        {% endif %}
    </div>
{% elif gamesNearMe %}
